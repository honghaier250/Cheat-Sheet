# To search a package:
apt search package

# To show package informations:
apt show package

# To fetch package list:
apt update

# To download and install updates without installing new package:
apt upgrade

# To download and install the updates AND install new necessary packages:
apt dist-upgrade

# Full command:
apt update && apt dist-upgrade

# To install a new package(s):
apt install package(s)

# To uninstall package(s)
apt remove package(s)

# List Installed Packages
sudo apt list --installed

sudo apt purge --autoremove "linux-*4.15.0-58*"

# Print url
sudo apt-get install --print-uris -y package-name

# socks5 proxy
ssh -D 1080 root@can_internet_host -p can_internet_host_port
sudo apt -o Acquire::http::proxy="http://10.0.90.209:1123/" install nmap

Acquire::http::Proxy "http://10.0.90.209:1123/";
Acquire::https::Proxy "http://10.0.90.209:1123/";

# lock kernel version
https://linzhanyu.github.io/linux/2020/04/15/apt-mark.html

# download package
apt --download-only -o Dir::Cache="./" -o Dir::Cache::archives="./" install libgd-dev
