# Print date in format suitable for affixing to file names
date +"%Y%m%d_%H%M%S"

# Convert Unix timestamp to Date(Linux)
date -d @1440359821

# Convert Unix timestamp to Date(Mac)
date -r 1440359821

# Print date 15 minutes before/after
date --date='15 minutes ago' +"%H:%M:%S"; date +"%H:%M:%S"; date --date='15 minutes' +"%H:%M:%S"
